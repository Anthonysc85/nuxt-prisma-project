datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model User {
  id       Int     @id @default(autoincrement())
  email    String  @unique
  password String
  notes    Note[]
}

model Note {
  id        Int      @id @default(autoincrement())
  title     String
  content   String
  createdAt DateTime @default(now())
  userId    Int      // now required
  user      User?    @relation(fields: [userId], references: [id])
  position  Int      @default(0) // for ordering notes

  latitude Float?
  longitude Float?
  address  String?
}

